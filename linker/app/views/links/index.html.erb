<p id="notice"><%= notice %></p>

<h1>Recently added links</h1>
<hr />
<br />
    <% @links.each do |link| %>
      <h2><%= link_to link.title, link.url %></h2>
      <%= link_to 'View comments', link %>
      <% if link.user == current_user %> <!-- кнопки, указанные ниже, будут видны только тому, кто создал ссылку -->
       | <%= link_to 'Edit', edit_link_path(link) %> | 
      <%= link_to 'Delete', link, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      <h5>Posted <%= link.created_at.strftime("%d.%m.%Y") %> at <%= link.created_at.strftime("%H:%M:%S") %> by <%= link.user.email %></h5>
      <br />
    <% end %>
